<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.home.HomeFragment">
    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/home_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#08090C">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rp9yfmux26qc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2h4v8l7940z"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="93dp"
                    android:src="@drawable/ic_home_arrow"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:id="@+id/r56haae8qe5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/cr6b121418"
                    android:paddingVertical="5dp"
                    android:layout_marginEnd="120dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/rdfqt6bdy4v6"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="31 AUG 2023"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/r5jm1sk9x30k"
                        app:shapeAppearanceOverlay="@style/cr6"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="9dp"
                        android:src="@drawable/ic_home_ar_down2"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/reuvnntrs0pn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_home_arrow"
                    android:scaleX="-1"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rn51ulxur7u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/cr12b121418"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/rs6gwekwjy98"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r2qzgpg8na1m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="Total Balance"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/r40wus18jo1q"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="₸760,000.00"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/r2tggiv586wg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_home_ar_down" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rf2x8ku9qyes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/r7qkhfwpji9m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cr12b121418"
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="25dp">

                        <LinearLayout
                            android:id="@+id/r87ytudrz9uf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/r5wz0dqi21n7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Budget"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/rf3vvw5b4tjd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cr10b6a66ff1a"
                                android:clickable="true"
                                android:focusable="true"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/r4ehuqm15o2p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All Budgets"
                                    android:textColor="#6A66FF"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rwf83xjkz9c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/rv4q7tbax4th"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="25dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/r93ezhn389x8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/r2gswwyrlq43"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:text="₸483,000.00 left"
                                        android:textColor="#FFFFFF"
                                        android:textSize="28sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/rg1ohu7vm6na"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="-₸277,000 spent this month"
                                        android:textColor="#9E9E9E"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/rxveltjdzj6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/cr19b6a66ff1a"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/rmrg11ps7xhr"
                                        android:layout_width="176dp"
                                        android:layout_height="6dp"
                                        android:background="@drawable/cr19b6a66ff"
                                        android:orientation="vertical">
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/roq88o6w44mc"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="25dp"
                                android:background="#0DFFFFFF"
                                android:orientation="vertical">
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/budgetCategoriesRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                app:layout_constraintTop_toBottomOf="@id/rmrg11ps7xhr"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:listitem="@layout/item_home_category"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/statistics_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr12b121418"
                    android:orientation="vertical"
                    android:paddingVertical="15dp">

                    <!-- Title + “Statistics” button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="35dp">

                        <TextView
                            android:id="@+id/rjacmb9uf96j"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Categories"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/ryndljmqcc9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr10b6a66ff1a"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/rowpjlrmrvps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Statistics"
                                android:textColor="#6A66FF"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Pie chart -->
                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp">

                        <com.fpis.money.views.fragments.home.stats.ExpenseChartView
                            android:id="@+id/expense_chart_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>

                    <!-- ◀️ STATIC DEMO CHIPS REMOVED ▶️ -->
                    <!-- LIVE stats chips: -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/statsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
