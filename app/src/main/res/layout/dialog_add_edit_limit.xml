<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Limit Amount"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_limit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter amount"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/cr9bffffff0d"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Threshold (%)"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_notification_threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="80"
        android:textColor="@color/white"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/cr9bffffff0d"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You'll be notified when spending reaches this percentage of your limit"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />
</LinearLayout>