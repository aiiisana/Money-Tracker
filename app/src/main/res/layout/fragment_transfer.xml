<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_transfer"
    tools:context=".views.fragments.add.TransferFragment">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#121418">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/indicatorLine"
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:background="@drawable/cr26bffffff0d"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/titleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/titleText"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Add Record"
                        />
                    <ImageView
                        android:id="@+id/closeButton"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_close"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/optionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="25dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/typeSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/expenseOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/expenseLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="21dp"
                                android:layout_marginHorizontal="36dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Expense"
                                />
                            <LinearLayout
                                android:id="@+id/expenseLine"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#0DFFFFFF"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/incomeOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/incomeLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="21dp"
                                android:layout_marginHorizontal="39dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Income"
                                />
                            <LinearLayout
                                android:id="@+id/incomeLine"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#0DFFFFFF"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/transferOption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/transferLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="21dp"
                                android:layout_marginHorizontal="36dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Transfer"
                                />
                            <LinearLayout
                                android:id="@+id/transferLine"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#FFFFFF"
                                android:orientation="vertical">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/amountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/amountLabel"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Transfer"
                            />
                        <TextView
                            android:id="@+id/amountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="â‚¸0"
                            android:textColor="@color/white"
                            android:textSize="46sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/separatorLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#0DFFFFFF"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/accountSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/fromAccountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/fromAccountText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/fromAccountLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="From Account"
                                />
                            <TextView
                                android:id="@+id/fromAccountName"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Select an account"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/fromAccountIconContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr9bffffff0d"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/fromAccountIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_cash"
                                android:scaleType="fitXY"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/separatorLine2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0DFFFFFF"
                        android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/toAccountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/toAccountText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/toAccountLabel"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="To Account"
                                />
                            <TextView
                                android:id="@+id/toAccountName"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Select an account"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/toAccountIconContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr9bffffff0d"
                            android:padding="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/toAccountIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_credit_card"
                                android:scaleType="fitXY"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlziz3xxsywd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0DFFFFFF"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/date_time_selection_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/date_time_details_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/date_time_label"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Date &amp; Time"
                                />

                            <TextView
                                android:id="@+id/date_time_value"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Select Date &amp; Time"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/date_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr9bffffff0d"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:padding="10dp"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                            <ImageView
                                android:id="@+id/date_time_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_calendar" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/separator_5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#0DFFFFFF"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/rm2885h6f6w"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rqvizr8fzse"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Notes"
                            />
                        <EditText
                            android:id="@+id/notes_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Type your notes"
                            android:padding="10dp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_record_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#121418"
                android:padding="10dp">

                <Button
                    android:id="@+id/add_record_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Record"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/button_background" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>