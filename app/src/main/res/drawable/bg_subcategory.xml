<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="#121418" />

    <!-- Скругленные углы -->
    <corners android:radius="20dp" />

    <!-- Границы (если нужны) -->
    <stroke
        android:width="2dp"
        android:color="#2A66FFA3" />

    <!-- Внутренние отступы -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
